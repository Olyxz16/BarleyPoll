---
export const partial = true;

import Button from '../Button.astro';
---


<li>
    <input type="text" x-model="input"></input>
    <Button 
        @click="$dispatch('add')" 
        @keydown.enter.window="$dispatch('add')"
        @keyup.shift.enter.window="$dispatch('submit')">
        <img src="/plusicon.svg"/>
    </Button>
</li>



<style>
    li {
        display: flex;
        flex-direction: row;

        margin: 15px 0px 15px 0px;
    }
    input {
        max-height: 26px;
        height: 26px;
        width: 85%;
        margin: 0px;
        margin-top: 8px;
        
        text-align: left;
        color: white;
        font-size: 1em;
        padding: 0px 0px 2px 8px;

        background: #13151a;
        border: 1px solid #313338;
        border-radius: 8px;
    }
    input:focus {
        border: 1px solid #313338;
        outline: 1px solid #3F4249;
        box-shadow: none;
        -webkit-box-shadow: none;
        -moz-box-shadow: none;
    }

    img {
        padding-top: 3px;
        max-width: 100%;
        max-height: 100%;
    }
</style>