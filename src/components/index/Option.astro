---
export const partial = true;

import Button from '../Button.astro';
import Separator from '../Separator.astro';
---


<li>
    <div class="choice">
        <p x-text="choice"> </p>
        <Button @click="$dispatch('remove', {choice: choice})">
            <img src="/trashicon.svg"/>
        </Button>
    </div>
    <Separator />
</li>



<style>
    li {
        display: flex;
        flex-direction: column;
    }
    .choice {
        display: flex;
        flex-direction: row;

        margin: 8px 0px 8px 0px;
    }
    p {
        width: 85%;
        margin: 0px;
        text-align: left;
    }
    button {
        background: #13151a;
        
        border: 1px solid #313338;
        border-radius: 5px;

        width: 30px;
        height: 30px;

        align-self: center;
        margin-right: 0%;
        margin-left: auto;
    }
    img {
        padding-top: 3px;
        max-width: 100%;
        max-height: 100%;
    }
</style>